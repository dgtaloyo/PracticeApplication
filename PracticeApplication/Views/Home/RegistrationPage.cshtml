<div class="row center">
    <div class="row rowMain center">
        <!-- Center the card within the container -->
        <div class="col s4 m4 l4"></div>

        <div class="col s4 m4 l4">
            <!-- Card Section -->
            <div class="row">
                <div class="col s12">
                    <div class="card"
                         style="border-radius: 20px;
                            box-shadow: 7px 8px 39px -4px rgba(0,0,0,0.65);
                            overflow: hidden;">

                        <!-- Card Content -->
                        <div class="card-content white-text" style="padding: 20px;">

                            <div class="card-logo center">
                                <img src="~/Content/Pictures/Tourterra.jpg"
                                     alt="Logo"
                                     class="responsive-img"
                                     style="width: 150px; height: auto; margin-bottom: 20px;">
                            </div>

                            <!-- Form Section -->
                            <div class="row">
                                <!-- First Name -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">account_circle</i>
                                    <input id="icon_firstname" type="text" class="validate" ng-model="firstName">
                                    <label for="icon_firstname" class="black-text">First Name</label>
                                </div>

                                <!-- Last Name -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">account_circle</i>
                                    <input id="icon_lastname" type="text" class="validate" ng-model="lastName">
                                    <label for="icon_lastname" class="black-text">Last Name</label>
                                </div>

                                <!-- Middle Name -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">account_circle</i>
                                    <input id="icon_middlename" type="text" class="validate" ng-model="MiddleName">
                                    <label for="icon_middlename" class="black-text">Middle Name</label>
                                </div>

                                <!-- Email -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">email</i>
                                    <input id="icon_email" type="email" class="validate" ng-model="userEmail">
                                    <label for="icon_email" class="black-text">Email</label>
                                </div>

                                <!-- Password -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">lock</i>
                                    <input id="icon_lock" type="password" class="validate" ng-model="userPassword">
                                    <label for="icon_lock" class="black-text">Password</label>
                                </div>

                                <!-- Address -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">home</i>
                                    <input id="icon_place" type="text" class="validate" ng-model="userAddress">
                                    <label for="icon_place" class="black-text">Address</label>
                                </div>

                                <!-- Phone Number -->
                                <div class="input-field col s12">
                                    <i class="material-icons prefix" style="color: green;">phone</i>
                                    <input id="icon_telephone" type="number" class="validate" ng-model="userNumber">
                                    <label for="icon_telephone" class="black-text">Phone Number</label>
                                </div>

                                <!-- Buttons -->
                                <div class="row" style="margin-top: 20px;">
                                    <div class="col s6">
                                        <a class="waves-effect waves-light btn blue darken-2" ng-click="submitFunc()" style="width: 100%;">
                                            <i class="material-icons left">send</i>SUBMIT
                                        </a>
                                    </div>
                                    <div class="col s6">
                                        <a class="waves-effect waves-light btn red darken-2" ng-click="cleanFunc()" style="width: 100%;">
                                            <i class="material-icons left">cancel</i>CANCEL
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
