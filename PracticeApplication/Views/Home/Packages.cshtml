@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <form id="form1" runat="server">
        <!-- Packages Section -->
        <div class="container mt-4">
            <div class="row">
                <!-- Package Cards -->
                <div class="col-md-6 col-lg-4 mb-4" ng-repeat="package in packages">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">{{package.packageName}}</h4>
                            <h5 class="card-title">{{package.packageLocation}}</h5>
                            <button class="btn btn-primary btn-sm mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#description{{package.packageID}}" aria-expanded="false" aria-controls="description1">
                                +
                            </button>
                            <div class="collapse" id="description{{package.packageID}}">
                                <p class="card-text">{{package.packageDetails}}</p>
                            </div>
                            <button class="btn btn-success btn-sm w-100" ng-click="newOrder(package)">Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
