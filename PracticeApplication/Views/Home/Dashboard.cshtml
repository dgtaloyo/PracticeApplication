@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="max-width: 100%;">
    <div class="row">

        <!-- User Card -->
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Users</span>
                    <h4 class="center-align">{{ userCount }}</h4>
                </div>
                <div class="card-action">
                    <a href="#" class="blue-text" ng-click="viewDetails('users')">View Details</a>
                </div>
            </div>
        </div>

        <!-- Bookings Card -->
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Bookings</span>
                    <h4 class="center-align">{{ bookingsCount }}</h4>
                </div>
                <div class="card-action">
                    <a href="#" class="green-text" ng-click="viewDetails('bookings')">View Details</a>
                </div>
            </div>
        </div>

        <!-- Total Packages Card -->
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Total Packages</span>
                    <h4 class="center-align">{{ totalPackages }}</h4>
                </div>
                <div class="card-action">
                    <a href="#" class="orange-text" ng-click="viewDetails('packages')">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>
