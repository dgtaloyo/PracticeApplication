@{
    Layout = "~/Views/Shared/_UserProfile.cshtml";
}

<div class="container" ng-controller="ProfileController" ng-init="initUser()">
    <h5 class="blue-text text-darken-4"><b>ACCOUNT INFORMATION</b></h5>

    <!-- First Name and Last Name -->
    <div class="row">
        <div class="input-field col s6">
            <input type="text" id="first_name" ng-model="user.firstName" placeholder="Enter First Name">
            <label for="first_name" class="active">First Name</label>
        </div>
        <div class="input-field col s6">
            <input type="text" id="last_name" ng-model="user.lastName" placeholder="Enter Last Name">
            <label for="last_name" class="active">Last Name</label>
        </div>
    </div>

    <!-- Username -->
    <div class="row">
        <div class="input-field col s12">
            <input type="text" id="username" ng-model="user.username" placeholder="Enter Username">
            <label for="username" class="active">Username</label>
        </div>
    </div>

    <!-- Email -->
    <div class="row">
        <div class="input-field col s12">
            <input type="email" id="email" ng-model="user.email" placeholder="Enter Email">
            <label for="email" class="active">Email</label>
            <a href="#" class="blue-text right" ng-click="changeEmail()">Change Email</a>
        </div>
    </div>

    <!-- Status -->
    <div class="row">
        <div class="input-field col s12">
            <input type="text" id="status" ng-model="user.status" placeholder="Status" disabled>
            <label for="status" class="active">Status</label>
        </div>
    </div>

    <!-- Save Button -->
    <div class="row">
        <div class="col s12">
            <button class="btn waves-effect waves-light blue" ng-click="saveProfile()">Save</button>
        </div>
    </div>
</div>
