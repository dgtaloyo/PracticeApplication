<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="pageTitle">TourTerra</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/stylez.css">
    <link rel="stylesheet" href="~/Content/owl.css">
</head>

<body ng-app="TourTerraApplication" ng-controller="TourTerraApplicationController" ng-init="checkUserSession()">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <!-- Add the logo and website name -->
            <a href="/" class="navbar-brand d-flex align-items-center">
                <img src="~/Content/Pictures/Tourterra.jpg" alt="TourTerra Logo" class="me-2" style="height: 40px; width: auto;">
                <span>TourTerra</span>
            </a>
            <a href="/Home/TourPage" class="nav-link">TourPage</a>

            <!-- Navbar Toggle Button -->
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                   
                    <li><a href="/Home/HomePage" class="nav-link">Home</a></li>
                    <li><a href="/Home/About" class="nav-link">About</a></li>
                    <li><a href="/Home/Contact" class="nav-link">Contact</a></li>
                    <li><a href="/Home/Packages" class="nav-link">Packages</a></li>
                </ul>


                <ul class="navbar-nav ms-auto">
                    <!-- Display either login or profile dropdown -->
                    <li class="nav-item" ng-if="!isLoggedIn">
                        <a class="nav-link" href="/Home/LoginPage" ng-click="loginPage()">Login</a>
                    </li>
                    <li class="nav-item dropdown" ng-if="isLoggedIn">
                        <a class="nav-link dropdown-toggle" href="#" id="myAccountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ userEmail }} <!-- Display the logged-in user's email -->
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="myAccountDropdown">
                            <li><a class="dropdown-item" href="/Home/UserPage">Profile</a></li>
                            <li><a class="dropdown-item" href="/Home/PurchaseHistory">Purchase History</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Home/Logout" ng-click="logout()">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Body Content -->
    <div id="body-content">
        <!-- AngularJS controller content will be injected here -->
        @RenderBody()
    </div>

    <!-- Footer Starts Here -->
    <footer>
        <div class="container mb-5">
            <div class="row">
                <div class="col s3 m3 l3 footer-item">
                    <h4>Travel Agency</h4>
                    <p>
                        Tailored itineraries for individuals, families, and groups.
                        Options for various destinations, durations, and budgets.
                    </p>
                </div>
                <div class="col s3 m3 l3 footer-item">
                    <h4>Additional Pages</h4>
                    <ul class="menu-list">
                        <li><a href="/Home/About">About Us</a></li>
                        <li><a href="/Home/Contact">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="sub-footer" style="margin-bottom: -100px">
            <div class="container">
                <div class="row">
                    <div class="col s12 m12 l12">
                        <p>Copyright © 2020 TourTerra</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>

    <script>
        // Set page title dynamically based on the current page
        document.getElementById('pageTitle').textContent = "TourTerra - " + document.title;
    </script>
</body>

</html>
