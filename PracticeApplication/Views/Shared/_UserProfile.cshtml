<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="/Content/materialize.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/1-main.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body ng-app="PracticeApplication" ng-controller="PracticeApplicationController">

    <!-- Navbar -->
    <div class="navbar-fixed">
        <nav style="background-color: black;">
            <div class="nav-wrapper">
                <a href="#" data-target="slide-out" class="sidenav-trigger">
                    <i class="material-icons">menu</i>
                </a>
                <!-- Centered logo with better scaling -->
                <a href="#" class="brand-logo center" style="display: flex; justify-content: center; align-items: center;">
                    <img src="~/Content/Pictures/Torterra.png" alt="Logo"
                         class="responsive-img"
                         style="max-width: 200px; max-height: 60px; display: block; margin: 0 auto;">
                </a>
            </div>
        </nav>
    </div>

    <!-- Sidenav -->
    <ul id="slide-out" class="sidenav sidenav-fixed"
        style="width: 240px; background-color: #dfe4e3;">
        <li>
            <div class="user-view center-align" style="background-color: black;">
                <img class="circle" src="~/Content/Pictures/Userlogo.png" style="width: 100px; height: 100px; display: block; margin-left: auto; margin-right: auto;">
                <span class="white-text">@ViewBag.Username</span>
            </div>
        </li>
        <li><a href="/Home/UserPage" class="waves-effect black-text"><i class="material-icons black-text">account_circle</i>My Account</a></li>
        <li><a href="/Home/PurchaseHistory" class="waves-effect black-text"><i class="material-icons black-text">shopping_cart</i>Purchase History</a></li>
        <li><a href="/Home/HomePage" class="waves-effect black-text"><i class="material-icons black-text">home</i>Home Page</a></li>
        <li><a href="/Home/LoginPage" class="waves-effect black-text"><i class="material-icons black-text">exit_to_app</i>Logout</a></li>
    </ul>

    <!-- Main Content -->
    <main style="margin-left: 240px; padding: 20px; box-sizing: border-box;">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/AngularScripts/Module.js"></script>
    <script src="/Scripts/AngularScripts/Service.js"></script>
    <script src="/Scripts/AngularScripts/Controller.js"></script>
</body>
</html>
